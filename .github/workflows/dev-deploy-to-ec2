name: Deploy to EC2

on:
  push:
    branches:
      - dev

jobs:
  deploy:
    runs-on: self-hosted

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up JDK 17
        uses: actions/setup-java@v3
        with:
          java-version: '17'
          distribution: 'temurin'
          cache: maven

      - name: Install Docker
        run: |
          sudo apt update
          sudo apt install -y docker.io
      #    sudo ln -s /usr/bin/docker /usr/local/bin/docker

      - name: Install Maven
        run: sudo apt update && sudo apt install -y maven

      - name: Build with Maven
        run: mvn -B package --file pom.xml

      - name: Configure AWS credentials
        uses: aws-actions/configure-aws-credentials@v1
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: us-west-2

      - name: Login to Amazon ECR
        id: login-ecr
        uses: aws-actions/amazon-ecr-login@v1
      
      - name: Build, tag, and push image to Amazon ECR
        env:
         ECR_REGISTRY: ${{ steps.login-ecr.outputs.registry }}
         ECR_REPOSITORY: learnspace-backend
      
        run: |
         docker build -t $ECR_REGISTRY/$ECR_REPOSITORY:v2 .
         docker push $ECR_REGISTRY/$ECR_REPOSITORY:v2

      - name: Add EC2 private key to SSH agent and give necesary permission
        run: |
          mkdir -p ~/.ssh
          echo "${{ secrets.LEARNSPACEKP }}" > ~/.ssh/learnspaceKP.pem
          chmod 400 ~/.ssh/learnspaceKP.pem
          eval "$(ssh-agent -s)"
          ssh-add ~/.ssh/learnspaceKP.pem
          chmod 600 /home/ubuntu/.ssh/learnspaceKP.pem
          ls -l /home/ubuntu/.ssh/learnspaceKP.pem
          

      - name: Deploy to EC2
        run: |
          ssh-keyscan -H 35.86.167.85 >> ~/.ssh/known_hosts
          ssh -i ~/.ssh/learnspaceKP.pem ubuntu@35.86.167.85 "docker pull 357586184453.dkr.ecr.us-west-2.amazonaws.com/learnspace-backend:v2"
          ssh -i ~/.ssh/learnspaceKP.pem ubuntu@35.86.167.85 "docker run -d -p 8080:8080 --env-file /home/ubuntu/env-file.env 357586184453.dkr.ecr.us-west-2.amazonaws.com/learnspace-backend:v2"
